#!/bin/sh
set -e

VERSION="7.0.2.3"
PATH=/var/runtime/bin/:$PATH
PROJECT_FOLDER="{{cookiecutter.project_name}}"

echo "== Installing Rails $VERSION =="

rm -rf ./rename_me
rm -rf "$PROJECT_FOLDER"

gem install rails -v $VERSION --no-document

rails _"$VERSION"_ new rename_me --webpack \
  --skip-action-mailbox \
  --skip-action-text \
  --skip-active-storage \
  --skip-puma \
  --skip-action-cable \
  --skip-bootsnap \
  --skip-hotwire

mv "rename_me" "$PROJECT_FOLDER"
